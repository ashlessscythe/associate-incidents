generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Associate {
  id        String     @id @default(uuid())
  name      String
  incidents Incident[]
}

model IncidentType {
  id          String     @id @default(uuid())
  name        String     @unique
  description String?
  incidents   Incident[]
}

model Incident {
  id            String       @id @default(uuid())
  associateId   String
  associate     Associate    @relation(fields: [associateId], references: [id])
  typeId        String       @default(uuid())
  type          IncidentType @relation(fields: [typeId], references: [id])
  description   String
  date          DateTime
  isVerbal      Boolean
}